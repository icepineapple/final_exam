<p id="notice"><%= notice %></p>

<h1>成績列表</h1>
<%= link_to '新增學生', new_score_path %>

<table>
  <thead>
    <tr>
      <th>姓名</th>
      <th>學號</th>
      <th>分數</th>
      <th>處理</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @scores.each do |score| %>
      <tr>
        <td><%= score.name %></td>
        <td><%= score.number %></td>
        <td><%= score.grade %></td>
        <td><%= score.process %></td>
        <td><%= link_to '編輯', edit_score_path(score) %></td>
        <td><%= link_to '刪除', score, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
